@using WorkManagement.Models.Shared
@{ var sessionUser = SessionHelper.SessionUser;}

<!DOCTYPE html>
<html lang="he">
<head>
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    @*<script src="http://ajax.microsoft.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>*@
    <script src="https://ajax.microsoft.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js" type="text/javascript"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ניהול עבודה</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body dir="rtl">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @if (sessionUser != null)
                    {
                        <span class="nav navbar-text navbar-right" style="color: black;">@string.Format(", {0} {1}", sessionUser.LastName, sessionUser.FirstName)</span>
                        <span class="nav navbar-text navbar-right">שלום לך </span>
                    }
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               style="color: blue !important;"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Index">בית</a>
                        </li>
                        @if (sessionUser != null)
                        {
                            @if (sessionUser.IsAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       style="color: blue !important;"
                                       asp-area=""
                                       asp-controller="Users"
                                       asp-action="UsersPage">משתמשים</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   style="color: blue !important;"
                                   asp-area=""
                                   asp-controller="Home"
                                   asp-action="LogInPage">כניסה</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; כל הזכויות שמורות ע"י רני הוכן <a asp-area="" asp-controller="Home" asp-action="Privacy">מדיניות פרטיות</a>
        </div>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    </body>
</html>

<style type="text/css">
    .td-style {
        border: 1px solid;
        text-align: center;
        padding: 5px 10px;
    }

    .th-style {
        background-color: lightgrey;
        border: 1px solid;
        text-align: center;
        padding: 5px 10px;
    }

    .align-right {
        text-align: right;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {

        $(".numbers-only").keypress(function (e) {

            var charCode = (e.which) ? e.which : event.keyCode

            if (String.fromCharCode(charCode).match(/[^0-9]/g))

                return false;

        });

    });  
</script>
